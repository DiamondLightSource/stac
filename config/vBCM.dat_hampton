SECTION MainFrameSLS
##################################
filename       devices/mainframe_blue.wrl
Pickable       no
Collidable     no
holds OmegaSLS

SECTION OmegaSLS
##################################
filename       devices/phi.wrl
AxisDirection  -1 0 0
AxisLocation   0 0 0
Pickable       yes
Collidable     no
Motor          Z
MinValue       -.01
MaxValue       .03 
Rotational     no
holds XYtable_baseSLS

SECTION XYtable_baseSLS
##################################
filename       devices/basexy.wrl
AxisDirection  -1 0 0
AxisLocation   0 0 0
Pickable       yes
Collidable     no
Motor          Omega
Rotational     yes
holds XYtable_YSLS

SECTION XYtable_YSLS
##################################
filename       devices/y.wrl
AxisDirection  0 1 0
AxisLocation   0 0 0
Pickable       yes
Collidable     no
Motor          Y
MinValue       -.01
MaxValue       .01 
Rotational     no
holds XYtable_XSLS

SECTION XYtable_XSLS
##################################
filename       devices/x.wrl
AxisDirection  0 0 1
AxisLocation   0 0 0
Pickable       yes
Collidable     no
Motor          X
MinValue       -.01
MaxValue       .01 
Rotational     no
holds simple_head

SECTION simple_head
##################################
filename       devices/simple_head.wrl
Pickable       no
Colliding      no
holds kappa_base

SECTION kappa_base
##################################
filename       devices/SLS/kappa_base.wrl
Pickable       no
Collidable    devices/SLS/kappa_base.wrl
Colliding      yes
holds kappa_arm

SECTION kappa_arm
##################################
filename       devices/SLS/kappa.wrl
AxisDirection  -1 1 0
AxisLocation   0 0 0
Pickable       yes
Motor          Kappa
Rotational     yes
Collidable    devices/SLS/kappa.wrl
Colliding      yes
holds Pin

SECTION Pin
##################################
filename       devices/pin.wrl
Pickable       no
Collidable    devices/pin.wrl
Colliding      yes
